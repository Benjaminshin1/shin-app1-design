<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<SplitPane dividerPositions="0.5" orientation="VERTICAL" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.FXMLController">
   <items>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="103.0" prefWidth="866.0">
         <children>
            <Button fx:id="add_task" layoutX="21.0" layoutY="32.0" mnemonicParsing="false" onAction="#buttonpress" text="add task" />
            <DatePicker fx:id="add_date" layoutX="102.0" layoutY="32.0" />
            <TextField fx:id="add_description" layoutX="305.0" layoutY="45.0" prefHeight="35.0" prefWidth="547.0" promptText="Add task here" />
            <MenuButton fx:id="dropdown_list" layoutX="2.0" layoutY="77.0" mnemonicParsing="false" text="list view">
              <items>
                <MenuItem fx:id="show_all" mnemonicParsing="false" text="show all" />
                <MenuItem fx:id="show_completed" mnemonicParsing="false" text="show completed" />
                  <MenuItem fx:id="show_incompleted" mnemonicParsing="false" text="show incompleted" />
              </items>
            </MenuButton>
            <TextField fx:id="add_title" layoutX="305.0" layoutY="10.0" prefHeight="35.0" prefWidth="547.0" promptText="Add title here" />
            <MenuButton fx:id="file_options" layoutX="82.0" layoutY="77.0" mnemonicParsing="false" text="file">
              <items>
                  <MenuItem fx:id="delete_list" mnemonicParsing="false" text="delete list" />
                <MenuItem fx:id="save_button" mnemonicParsing="false" text="save as" />
                <MenuItem fx:id="open_saved" mnemonicParsing="false" text="open saved" />
              </items>
            </MenuButton>
         </children>
      </AnchorPane>
      <ListView fx:id="listview" prefHeight="328.0" prefWidth="850.0">
         <contextMenu>
            <ContextMenu fx:id="right_click">
              <items>
                  <MenuItem fx:id="edit_title" mnemonicParsing="false" text="change title" />
                <MenuItem fx:id="remove" mnemonicParsing="false" text="remove task" />
                  <MenuItem fx:id="edit_date" mnemonicParsing="false" text="edit date" />
                  <MenuItem fx:id="edit_task" mnemonicParsing="false" text="edit task" />
              </items>
            </ContextMenu>
         </contextMenu>
      </ListView>
   </items>
</SplitPane>
